{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    // instruct tsc that there are project references
    // this also sets the default rootdir to the tsconfig.json directory
    "composite": true,
    "declaration": true,
    // adds source maps for .d.ts declaration files.
    // Goto definition in the IDE will go to the actual file, not the .d.ts
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "module": "CommonJS",
    "noEmitOnError": false,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./build",

    // paths avoids the need for relative paths
    "paths": {
      "@hivelib": ["hivelib/src"],
      "@hiveoview": ["hiveoview/src"],
      "@zwavejs": ["zwavejs/src"]
    },
    "references": [
      {"path": "../hivelib"},
      {"path": "../hiveoview"},
      {"path": "../zwavejs"}
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.js"
    ],
    "exclude": [
      "build/**",
      "dist/**"
    ]
  }
}