{
  "name": "zwavejs-binding",
  "version": "0.2-alpha",
  "description": "HiveOT Zwave binding using zwavejs",
  "license": "MIT",
  "main": "src/main.ts",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dist": "tsc && tsc-alias && pkg --compress GZip package.json",
    "testtsc": "tsc && tsc-alias && node --preserve-symlinks build/src/tests/hubconnect_test.js",
    "testtsx": "tsx --preserve-symlinks src/tests/hubconnect_test.ts",
    "devtsc": "tsc && tsc-alias && ZWAVEJS_EXTERNAL_CONFIG=dist/cache node --preserve-symlinks build/src/main.js --home ~/bin/hiveot",
    "devtsx": "ZWAVEJS_EXTERNAL_CONFIG=dist/cache tsx --preserve-symlinks src/main.ts --home ~/bin/hiveot",
    "version": "node --version"
  },
  "bin": "build/main.js",
  "pkg": {
    "scripts": [],
    "compress": "GZip",
    "assets": [
      "node_modules/@serialport"
    ],
    "targets": [
      "node"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "bonjour-service": "^1.1.1",
    "commander": "^10.0.0",
    "md5": "^2.3.0",
    "mqtt": "^5.2.2",
    "mqtt-packet": "^9.0.0",
    "process": "^0.11.10",
    "serialport": "^10.5.0",
    "tslog": "^4.9.2",
    "ws": "^8.12.0",
    "yaml": "^2.3.4",
    "zwave-js": "^10.4.0"
  },
  "devDependencies": {
    "@types/md5": "^2.3.5",
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.9",
    "pkg": "^5.8.1",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.8",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "readme": "readme - todo",
  "_id": "zwavejs-binding"
}