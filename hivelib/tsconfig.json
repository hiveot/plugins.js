{
  // https://blog.logrocket.com/make-sharing-typescript-code-types-quick-easy/
  // typescript should generate JS files that support nodejs type loading
  // however, intellij doesn't seem to understand this.
  "extends": "@tsconfig/node20/tsconfig.json",
//  "extends": "../tsconfig.base.json",
  "compilerOptions": {
//    "allowJs": true,  // conflicts with declaration flag?
    "baseUrl": ".",
    "checkJs": false,
   "composite": true, // false when  disabling incremental
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": false,
    "inlineSourceMap": false,
    // "incremental": true,     // remove tsconfig.tsbuildinfo to rebuild
    "lib": ["dom","esnext"],
    "module": "commonjs",
   "moduleResolution": "node",
    "noEmitOnError": false,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "build",
    // paths resolves relative to baseUrl; MUST RUN tsc-alias after build!
    "paths": {
      "@hivelib/*": ["src/*"],
      "@keys/*": ["src/keys/*"]
    },
    "preserveSymlinks": true,
    "pretty": true,
   
    "resolveJsonModule": true,
    "rootDir": "./src/",
    "sourceMap": true,
    "target": "esnext"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ],
  "exclude": [
    "build/**",
    "node_modules",
    "dist/**",
  ],
//  "references": [{
//    "path": "../hivelib"}]
}
