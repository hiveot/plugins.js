{
  // typescript should generate JS files that support nodejs type loading
 "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    // instruct tsc that there are project references
    // this also sets the default rootdir to the tsconfig.json directory
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,

    "emitDecoratorMetadata": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    // "inlineSourceMap": true,
//    "isolatedModules": true,
    // Avoid runtime imports that are unnecessary
      "lib": ["dom","esnext"],
    "module": "node16",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "outDir": "./build",
    // paths avoids the need for relative paths
    "paths": {
      "@hivelib/*": ["../hivelib/src/*"],
      "@keys/*": ["../hivelib/src/keys/*"],
      "@zwavejs/*": ["./src/*"]
    },
    "preserveSymlinks": true,
    /* Necessary to support yarn portals with the node-modules linker, used by yarn link (berry) */
    "pretty": true,

    "rootDir": "src",
    "sourceMap": true,
    "target": "esnext",
    "types": [
         "node"
    ],
    "strict": true,
  },
  "references": [
    {"path": "../hivelib"},
  ],
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "build/**",
    "node_modules",
    "dist/**",
  ],
}