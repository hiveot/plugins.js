{
  // typescript should generate JS files that support nodejs type loading
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    // instruct tsc that there are project references
    // this also sets the default rootdir to the tsconfig.json directory
    // "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    // Avoid runtime imports that are unnecessary
    "lib": [
      "esnext",
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": false,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./build",
    // paths avoids the need for relative paths
    "paths": {
      "@hivelib/*": [
        "./hivelib/src/*"
      ],
      "@keys/*": [
        "./hivelib/src/keys/*"
      ],
      "@zwavejs/*": [
        "./src/*"
      ]
    },
    "preserveSymlinks": true,
    /* Necessary to support yarn portals with the node-modules linker, used by yarn link (berry) */
    "pretty": true,
    "rootDirs": [
      ".",
      // "hivelib"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "node"
    ],
  },
  // "references": [
  //   {
  //     "path": "../hivelib"
  //   },
  // ],
  "include": [
    "src/**/*.ts",
    "hivelib/src/**/*.ts",
  ],
  "exclude": [
    "./build",
    "./node_modules",
    "./dist",
  ],
}