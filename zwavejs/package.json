{
  "name": "zwavejs-binding",
  "version": "0.2-alpha",
  "description": "HiveOT Zwave binding using zwavejs",
  "license": "MIT",
  "main": "src/main.ts",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && tsc-alias",
    "test": "tsx src/tests/hubconnect_test.ts",
    "dist": "tsc && pkg --compress GZip package.json",
    "dev": "tsc && ZWAVEJS_EXTERNAL_CONFIG=dist/cache node build/main.js --home ~/bin/hiveot",
    "version": "node --version"
  },
  "bin": "build/main.js",
  "pkg": {
    "scripts": [],
    "compress": "GZip",
    "assets": [
      "node_modules/@serialport"
    ],
    "targets": [
      "node"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "md5": "^2.3.0",
    "serialport": "^10.5.0",
    "ws": "^8.12.0",
    "yaml": "^2.2.1",
    "zwave-js": "^10.4.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/md5": "^2.3.5",
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.9",
    "pkg": "^5.8.1",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.8",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "readme": "readme - todo",
  "_id": "zwavejs-binding"
}
