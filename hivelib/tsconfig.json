{
  // https://blog.logrocket.com/make-sharing-typescript-code-types-quick-easy/
  // typescript should generate JS files that support nodejs type loading
//  "extends": "@tsconfig/node20/tsconfig.json",
//  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
//    "checkJs": false,
//    "emitDecoratorMetadata": false,
    "esModuleInterop": true,
    //    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
//    "isolatedModules": true,
    // Avoid runtime imports that are unnecessary
    "inlineSourceMap": true,
    "incremental": true,
    "lib": ["dom","es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    // paths resolves relative to baseURL
    "paths": {
      "@hivelib/*": ["src/*"],
      "@keys/*": ["src/keys/*"]
    },
//    "skipLibCheck": true,
//    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "target": "es6",
  },
//  "references": [
//    {"path": "../hivelib"}
//  ],
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "./build/**",
    "node_modules",
    "./dist/**",
  ],
//  "references": [{
//    "path": "../hivelib"}]
}